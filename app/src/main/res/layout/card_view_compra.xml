<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view_registro_nombre"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:layout_marginEnd="16dp"
    card_view:cardBackgroundColor = "#227C9D"
    card_view:cardCornerRadius="20dp"
    card_view:elevation="6dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:id="@+id/card_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/CVCompra"
        android:padding="16dp">

        <ImageView
            android:id="@+id/cv_comp_image_original"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/cv_comp_nombre_original"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cv_comp_image_original"
            android:text="@string/AIdefualtNombre"
            android:textColor="@color/ColorTexto"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cv_comp_precio_original"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv_comp_nombre_original"
            android:layout_toEndOf="@id/cv_comp_image_original"
            android:text="@string/AIdefaultPrecio"
            android:textColor="@color/ColorTexto"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cv_comp_descripcion_original"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv_comp_precio_original"
            android:layout_toEndOf="@id/cv_comp_image_original"
            android:text="@string/AIdefaultDescripcion"
            android:textColor="@color/ColorTexto"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cv_comp_minus_btn_original"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/cv_comp_image_original"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-60dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/minus"
            android:shadowColor="#000000"
            android:textColorHighlight="#FFFFFF"
            android:textSize="20sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/cv_comp_add_btn_original"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/cv_comp_image_original"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-60dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/add"
            android:shadowColor="#000000"
            android:textColorHighlight="#FFFFFF"
            android:textSize="20sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/cv_comp_cantidad_original"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/cv_comp_minus_btn_original"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="-5dp"
            android:text="0"
            android:textColor="@color/ColorTexto"
            android:textSize="16sp"
            android:textStyle="bold" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>