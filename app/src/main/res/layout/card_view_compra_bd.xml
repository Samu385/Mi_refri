<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view_registro_nombre"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:layout_marginEnd="16dp"
    card_view:cardBackgroundColor = "#227C9D"
    card_view:cardCornerRadius="20dp"
    card_view:elevation="6dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:id="@+id/card_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/CVCompra"
        android:padding="16dp">

        <TextView
            android:id="@+id/cv_compbd_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/AIdefualtNombre"
            android:textColor="@color/ColorTexto"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cv_compbd_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv_compbd_nombre"
            android:text="@string/AIdefaultPrecio"
            android:textColor="@color/ColorTexto"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cv_compbd_categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv_compbd_precio"
            android:layout_marginTop="0dp"
            android:text="@string/AICategoria"
            android:textColor="@color/ColorTexto"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cv_compbd_minus_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="69dp"
            android:background="@drawable/minus"
            android:shadowColor="#000000"
            android:textColorHighlight="#FFFFFF"
            android:textSize="20sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/cv_compbd_add_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/add"
            android:shadowColor="#000000"
            android:textColorHighlight="#FFFFFF"
            android:textSize="20sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/cv_compbd_cantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/cv_compbd_minus_btn"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-2dp"
            android:layout_marginRight="-13dp"
            android:text="0"
            android:textColor="@color/ColorTexto"
            android:textSize="16sp"
            android:textStyle="bold" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>